{
  "name": "flash-notes",
  "displayName": "yanyue404 的 VS Code 插件",
  "description": "yanyue: 闪念笔记（自己省察自己）",
  "version": "0.0.2",
  "publisher": "yanyue404",
  "private": true,
  "license": "MIT",
  "repository": "https://github.com/yanyue404/vscode-extension-ts",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "file/newFile": [
        {
          "command": "yanyue.sayHello"
        }
      ]
    },
    "commands": [
      {
        "title": "yanyue: Say Hello",
        "shortTitle": "Say Hello (This is the name used in the New File quick pick)",
        "command": "yanyue.sayHello"
      },
      {
        "command": "yanyue.createAndOpenNote",
        "title": "yanyue: 闪念笔记（自己省察自己）"
      }
    ],
    "keybindings": [
      {
        "command": "yanyue.createAndOpenNote",
        "key": "ctrl+shift+alt+n",
        "mac": "cmd+shift+alt+n",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "package": "vsce package",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^18",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^7.14.0",
    "@typescript-eslint/parser": "^7.14.0",
    "eslint": "^8.26.0",
    "typescript": "^5.5.2",
    "vsce": "^2.15.0"
  }
}
